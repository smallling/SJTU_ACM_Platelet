" Encoding
se enc=utf-8

" Indent
se si
au filetype cpp,java set cin
se et ts=4 sw=4 sts=4

" Display
se nu sc sm lbr
se stl=%{strftime('%H:%M:%S')}\ %t\ %03.l\ %03.c\ %y\ [%{&fenc}]\ %F\ %m fcs=stl:\  ls=2
hi statusline cterm=bold

" Search
se is hls

" Mouse
se mouse=a

" Cut Copy Paste
nm <C-A> ggVG
nm <C-V> aa<Esc>v<C-V>
vm <C-A> <Esc><C-A>
vm <C-X> "+d
vm <C-C> "+y
vm <C-V> "+p
im <C-V> a<Esc>v<C-V>a

" Print
map <C-P> :ha<CR>
se popt=duplex:off

" Split
se spr
nm <F12> :x<CR>
nm <S-F12> <C-W>l:q<CR>
nm <C-T> :vs 
nm <S-F11> :vert res 

" Completion
ino <Tab> <C-N>
ino <S-Tab> <Tab>

" Highlight
sy on
cno <C-T> syntax keyword Type <C-R><C-W>

" Fold
au filetype cpp,java se fdm=syntax nofen
nm <SPACE> za

" Compile Run
au filetype cpp cm <F5> g++ % -std=c++14 -Wall -Wextra -O2
au filetype cpp cm <S-F5> ./a.out
au filetype java cm <F5> javac %
au filetype java cm <S-F5> java %<
au filetype python cm <F5> echo -n
au filetype python cm <S-F5> python %
au filetype kotlin cm <F5> cp % TempKotlin.kt && kotlinc TempKotlin.kt
au filetype kotlin cm <S-F5> kotlin TempKotlinKt
au filetype sh cm <F5> chmod +x %
au filetype sh cm <S-F5> ./%
nm <F9> :w<CR>:!<F5> && <S-F5><CR>
nm <S-F9> :w<CR>:!<F5> && time <S-F5> < in<CR>
nm <C-S-F9> :w<CR>:!<F5> &> out && echo "" >> out && (time <S-F5> < in &>> out) &>> out<CR><C-T>out<CR><S-F11>-20<CR>/error<CR>
