se et ts=4 sw=4 sts=4 nu sc sm lbr is hls mouse=a
sy on
ino <Tab> <C-N>
ino <S-Tab> <Tab>
au winnew * winc L

nm <F6> ggVG"+y
nm <F7> :w<CR>:make<CR>
nm <S-F7> <F7>:cw<CR>
nm <F8> :!@@<CR>
nm <F9> :!@@ < in<CR>
nm <S-F9> :!(time @@ < in &>> out) &>> out<CR>:sp out<CR>

au filetype cpp cm @@ ./a.out | se cin fdm=syntax mp=g++\ %\ -std=c++11\ -Wall\ -Wextra\ -O2

map <C-P> :ha<CR>
se pheader=%N\ %F

au filetype java cm @@ java %< | se cin fdm=syntax mp=g++\ %\ std=c++11\ -Wall\ -Wextra\ -O2
au filetype python cm @@ python % | se si fdm=indent mp=echo\ -n
